{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@api/*": ["src/api/*"],
      "@screens/*": ["src/screens/*"],
      "@components/*": ["src/components/*"],
      "@navigation/*": ["src/navigation/*"],
      "@store/*": ["src/store/*"],
      "@theme/*": ["src/theme/*"],
      "@utils/*": ["src/utils/*"],
      "@i18n/*": ["src/i18n/*"],
      "@hooks/*": ["src/hook/*"],
      "@validations/*": ["src/validations/*"],
      "@constants/*": ["src/navigation/constants/*"],
      "@assets/*": ["assets/*"],
      "@env": ["./node_modules/react-native-dotenv"],
      "@/*": ["src/*"]
    }
  }
}
